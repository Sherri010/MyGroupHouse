<h4> Event Board </h4>
{{#unless events.length}}
  No Events planned...
 {{/unless}}
 {{#if events.length}}
  <div class="row">
    {{#each events}}
       <div class="col s12 m3">
         <div class="card grey">
           <h5>Event: {{this.name}}</h5>
           <p> About:{{this.disc}}</p>
           <div class="chip">
             {{this.organizer_name}}
             <p> people going: {{this.rsvp.length}}</p>
             {{{showLinks this ../currentUser}}}
           </div>
         </div>
       </div>
    {{/each}}
   </div>
   {{/if}}

   <!-- create Modal -->
   <div id="modal1" class="modal modal-fixed-footer">
    <form method="post" action="/events">
     <div class="modal-content">
       <h4>Create New Event</h4>
         <div class="input-field col s6">
            <input  id="first_name" name="name" type="text" class="validate">
            <label for="first_name">Event name</label>
          </div>
          <div class="input-field col s6">
            <!-- <label for="first_name">Event date</label> -->
            <input  id="first_name" name="date" type="date" class="validate">
          </div>
          <div class="input-field col s6">
            <input  id="first_name" name="begin" type="number" min="0" max="23" class="validate">
            <label for="first_name">Starts at:</label>
          </div>
          <div class="input-field col s6">
            <input  id="first_name" name="end" type="number" min="0" max="24" class="validate">
            <label for="first_name">Ends at:</label>
          </div>
         <div class="input-field col s12">
              <textarea id="textarea1" name="disc" class="materialize-textarea" length="250"></textarea>
              <label for="textarea1">Discription:</label>
            </div>
       </div>
       <div class="modal-footer">
         <button type="submit"  class="modal-action modal-close waves-effect waves-green btn-flat ">Create</button>
       </div>
   </form>
   </div>
